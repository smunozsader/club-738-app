rules_version = '2';

// ============================================================================
// STORAGE SECURITY RULES - Club 738
// ============================================================================
// PRINCIPIO: Cada socio solo accede a sus propios documentos
// Estructura: documentos/{email}/[curp.pdf, constancia.pdf, etc.]
// ============================================================================

service firebase.storage {
  match /b/{bucket}/o {
    
    // ========================================================================
    // HELPER FUNCTIONS
    // ========================================================================
    
    // Verificar autenticación
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Verificar que accede a su propia carpeta
    function isOwner(email) {
      return isAuthenticated() && request.auth.token.email.lower() == email.lower();
    }
    
    // Verificar si es el Secretario/Admin
    function isSecretario() {
      return isAuthenticated() && (
        request.auth.token.email == 'admin@club738.com' ||
        request.auth.token.email == 'smunozam@gmail.com'
      );
    }
    
    // Verificar tipo de archivo permitido
    // Más flexible: acepta variantes de MIME types
    function isAllowedFileType() {
      return request.resource.contentType.matches('application/pdf')
          || request.resource.contentType.matches('image/jpeg')
          || request.resource.contentType.matches('image/jpg')
          || request.resource.contentType.matches('image/png')
          || request.resource.contentType.matches('image/.*');
    }
    
    // Verificar tamaño máximo para documentos generales (5MB)
    function isUnderSizeLimit() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Verificar tamaño máximo para registros de armas (10MB)
    // Los RFA pueden ser escaneos de alta calidad
    function isUnderArmasSizeLimit() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // ========================================================================
    // CARPETA: documentos/{email}/armas/{armaId}/
    // ========================================================================
    // Para documentos específicos de armas (registros, etc.)
    // El secretario puede listar armas de cualquier socio para impresión
    // LÍMITE AUMENTADO A 10MB para RFA (Registros Federales de Armas)
    // ⚠️ DEBE IR ANTES DE LA REGLA GENÉRICA documentos/{email}/{fileName}
    
    match /documentos/{email}/armas/{armaId}/{fileName} {
      allow read: if isOwner(email) || isSecretario();
      allow list: if isOwner(email) || isSecretario();
      allow write: if (isOwner(email) || isSecretario())
                   && isAllowedFileType() 
                   && isUnderArmasSizeLimit();  // 10MB para registros de armas
      allow delete: if isOwner(email);
    }

    // ========================================================================
    // CARPETA: documentos/{email}/ (genérica - va DESPUÉS de armas)
    // ========================================================================
    // Cada socio puede leer sus documentos
    // Solo puede subir PDFs e imágenes de máximo 5MB
    
    match /documentos/{email}/{fileName} {
      // Lectura: el propio socio O el secretario
      allow read: if isOwner(email) || isSecretario();
      
      // Lista de archivos: el propio socio O el secretario (para expediente impresor)
      allow list: if isOwner(email) || isSecretario();
      
      // Escritura: el propio socio O el secretario, con validaciones
      allow write: if (isOwner(email) || isSecretario())
                   && isAllowedFileType() 
                   && isUnderSizeLimit();
      
      // Eliminar: solo el propio socio (secretario no puede eliminar)
      allow delete: if isOwner(email);
    }
    
    // ========================================================================
    // CARPETA: documentos/{email}/armas/ (listar archivos)
    // ========================================================================
    // El secretario necesita poder listar la carpeta de armas para impresión
    
    match /documentos/{email}/armas/{fileName=**} {
      allow read, list: if isOwner(email) || isSecretario();
    }
    
    // ========================================================================
    // REGLA DEFAULT: Denegar todo lo demás
    // ========================================================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
